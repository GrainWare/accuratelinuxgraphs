<script>
    // cookies for each:
    // - toggleAdvanced
    // - toggleAnimations
    // - toggleGrain

    // check if toggleAdvanced is set, if so, enable the other two 
    if (document.cookie.includes("toggleAdvanced=true")) {
        (document.getElementById("toggleAnimations") as HTMLInputElement).disabled = false;
        (document.getElementById("toggleGrain") as HTMLInputElement).disabled = false;
    } else {
        (document.getElementById("toggleAnimations") as HTMLInputElement).disabled = true;
        (document.getElementById("toggleGrain") as HTMLInputElement).disabled = true;
    }

    // adjust all checkboxes accordingly to the current cookie state
    const toggleAdvanced = document.getElementById("toggleAdvanced") as HTMLInputElement;
    const toggleAnimations = document.getElementById("toggleAnimations") as HTMLInputElement;
    const toggleGrain = document.getElementById("toggleGrain") as HTMLInputElement;
    for (const checkbox of [toggleAdvanced, toggleAnimations, toggleGrain]) {
        const cookieValue = document.cookie
            .split("; ")
            .find((row) => row.startsWith(`${checkbox.id}=`))
            ?.split("=")[1];
        if (cookieValue === "true") {
            checkbox.checked = true;
        } else {
            checkbox.checked = false;
        }
    }

    // set cookie on change
    for (const checkbox of [toggleAdvanced, toggleAnimations, toggleGrain]) {
        checkbox.addEventListener("change", () => {
            document.cookie = `${checkbox.id}=${checkbox.checked}; path=/; max-age=31536000`;
            if (checkbox.id === "toggleAdvanced") {
                (document.getElementById("toggleAnimations") as HTMLInputElement).disabled = !checkbox.checked;
                (document.getElementById("toggleGrain") as HTMLInputElement).disabled = !checkbox.checked;
            }
        });
    }
</script>

<Layout>
    <p>advanced accuracy settings</p>
    <div class="bg-grain-bg">
        <input type="checkbox" id="toggleAdvanced" />
        <label for="toggleAdvanced">Enable Advanced Settings (No settings on this page will work without this)</label>
        <hr />
        <input type="checkbox" id="toggleAnimations" disabled />
        <label for="toggleAnimations">Disable Animations (Reduces Accuracy Significantly)</label>
        <p>Animations are disabled by default. If you do not truly NEED to disable animations, please re-enable them. We worked hard on them and they are part of the experience. To help reinforce this your cursor will be changed to a middle finger.</p>
        <hr />
        <input type="checkbox" id="toggleGrain" disabled />
        <label for="toggleGrain">Enable Super Grain Mode</label>
    </div>
